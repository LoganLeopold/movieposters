<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}" class="{{ checkout_html_classes }}">
  <head>
 {% comment %} {% render 'elevar-head-listener' %}
  {% render 'elevar-head' %}{% endcomment  %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">
    <meta name="referrer" content="origin">

    <title>{{ page_title }}</title>
    {{ content_for_header }}
    {{ checkout_stylesheets }}
    {{ 'checkout_theme.scss.css' | asset_url | stylesheet_tag }}
    {{ checkout_scripts }}
  {% comment %}
  <!-- REAMAZE INTEGRATION START - DO NOT REMOVE -->
{% include 'reamaze-config' %}
{% include 'reamaze-sso' %}
<!-- REAMAZE INTEGRATION END - DO NOT REMOVE -->
{% endcomment %}
</head>
  <body>
  {% comment %}{% render 'elevar-checkout-end' %}{% endcomment %}
    {{ skip_to_content_link }}
    <div class="banner" data-header>
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </div>
   {{ order_summary_toggle }}

    <div class="content" data-content>
      <div class="wrap">
        <div class="main" role="main">
          <div class="main__header">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </div>
          <div class="main__content">
            {{ content_for_layout }}
          </div>
          <div class="main__footer">
            {{ content_for_footer }}
          </div>
        </div>
        <div class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
            
           {% comment %} {% render 'shopify-planet' %}{% endcomment %}
            
            <div class="checkout_image_wrapper">
              <img src="{{ 'checkout-image.jpg' | asset_img_url: 'master' }}">
            </div>
          </div>
          
        </div>
      </div>
    </div>

    {{ tracking_code }}
  </body>
</html>