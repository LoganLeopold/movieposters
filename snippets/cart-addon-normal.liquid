{% if section.settings.enable_section_normal %}
  {% assign collection = collections[section.settings.collection_normal] %}

  <div class="addon" data-addon>
    <div class="addon__header">
      <h3 data-addon-trigger><span class="icon icon-add-16"></span> {{ section.settings.section_title_normal }}</h3>
      <p>{{ section.settings.section_content_normal }}</p>

      <div class="addon__items grid grid-uniform">
        {% for product in collection.products %}
          {% include 'collection-item-addon' %}
        {% endfor %}         
        
      </div>
    </div>
  </div>
{% endif %}